{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2023", "dom"],
    "declaration": false,
    "outDir": "../lib",
    "strict": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../node_modules/@types", "../typings"],
    "allowJs": true
  },
  "exclude": ["**/tests", "**/*.test.ts", "**/*.fixture.*", "**/fixtures"]
}
